doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title AnswerJS
    link(rel='stylesheet', href='/app.css')
    link(rel='stylesheet', href='/include/bootstrap/css/bootstrap.css')
    link(rel='stylesheet', href='bower_components/font-awesome/css/font-awesome.css')
  body
    if target == 'dev'
      script(src='/bower_components/requirejs/require.js', data-main='/src/requirejs/config')
      script.
        document.write('<script src="http://' + location.hostname + ':35729/livereload.js?snipver=1"><\/script>')
    else
      script(src='/app.js')

    div(class='container')
      h1 AnswerJS Demo
      div(class='row')
        #widgets
          div(class='span3')
            #fieldpicker
          div(class='span9')
            #fieldlist
      
      div(class='row')
        #actions
          form
            fieldset
              div(class='span2')
                #runbutton.button(class='btn btn-primary', type='button') Run
